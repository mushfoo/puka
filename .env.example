# Environment Variables for Puka Reading Tracker

# App Configuration
VITE_APP_ENV=production
VITE_APP_VERSION=2.0.0

# Supabase Configuration (Required for cloud sync)
VITE_SUPABASE_URL=https://your-project-ref.supabase.co
VITE_SUPABASE_ANON_KEY=your-anon-key-here

# Railway Configuration
NODE_ENV=production
PORT=4173

# Analytics (Optional - for H002 implementation)
VITE_ANALYTICS_ENABLED=true
VITE_PLAUSIBLE_DOMAIN=puka-reading-tracker.up.railway.app

# Error Monitoring (Optional)
VITE_SENTRY_DSN=your-sentry-dsn-here
VITE_SENTRY_ENVIRONMENT=production

# Feature Flags (Optional)
VITE_CLOUD_SYNC_ENABLED=true
VITE_ANALYTICS_OPT_OUT_AVAILABLE=true