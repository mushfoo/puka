{
  "name": "puka",
  "private": true,
  "version": "2.0.0",
  "type": "module",
  "scripts": {
    "dev": "vite",
    "dev:server": "tsx --watch src/server/index.ts",
    "dev:full": "echo 'Run npm run dev:server in one terminal and npm run dev in another'",
    "build": "npm run build:frontend && npm run build:check",
    "build:frontend": "vite build",
    "build:check": "npm run type-check && npm run lint",
    "build:production": "npm run db:generate && npm run build",
    "lint": "eslint . --ext ts,tsx --report-unused-disable-directives --max-warnings 0",
    "preview": "vite preview --host 0.0.0.0 --port 4173",
    "start": "tsx src/server/index.ts",
    "start:production": "NODE_ENV=production npm run start",
    "test": "vitest",
    "test:watch": "vitest --watch",
    "test:integration": "vitest --config vitest.integration.config.ts --run",
    "test:integration:watch": "vitest --config vitest.integration.config.ts --watch",
    "test:e2e": "playwright test",
    "test:e2e:ui": "playwright test --ui",
    "test:e2e:headed": "playwright test --headed",
    "test:e2e:report": "playwright show-report",
    "test:all": "npm run test -- --run && npm run test:integration && npm run test:e2e",
    "type-check": "tsc --noEmit",
    "health-check": "curl -f http://localhost:3000/health.json || exit 1",
    "db:setup": "./scripts/setup-db.sh",
    "db:generate": "prisma generate",
    "db:push": "prisma db push",
    "db:migrate": "bash ./scripts/railway-migrate.sh",
    "db:migrate:production": "bash ./scripts/migrate-production.sh --verbose",
    "db:migrate:dev": "prisma migrate dev",
    "db:studio": "prisma studio",
    "db:reset": "prisma migrate reset",
    "db:seed": "tsx prisma/seed.ts",
    "deploy:check": "npm run build:production && npm run health-check",
    "deploy:validate": "./scripts/validate-deployment.sh",
    "deploy:validate:staging": "./scripts/validate-deployment.sh https://puka-staging.up.railway.app",
    "deploy:validate:production": "./scripts/validate-deployment.sh https://puka-production.up.railway.app",
    "railway:start": "npm run start"
  },
  "dependencies": {
    "@prisma/client": "^5.22.0",
    "@types/react-window": "^1.8.8",
    "better-auth": "^1.2.12",
    "cors": "^2.8.5",
    "express": "^4.19.2",
    "express-rate-limit": "^7.4.1",
    "helmet": "^7.1.0",
    "papaparse": "^5.5.3",
    "react": "^18.2.0",
    "react-dom": "^18.2.0",
    "react-window": "^1.8.11",
    "terser": "^5.43.1",
    "tsx": "^4.0.0"
  },
  "devDependencies": {
    "@playwright/test": "^1.53.1",
    "@testing-library/jest-dom": "^6.4.2",
    "@testing-library/react": "^14.2.1",
    "@testing-library/user-event": "^14.6.1",
    "@types/papaparse": "^5.3.16",
    "@types/react": "^18.2.66",
    "@types/react-dom": "^18.2.22",
    "@typescript-eslint/eslint-plugin": "^7.2.0",
    "@typescript-eslint/parser": "^7.2.0",
    "@vitejs/plugin-react": "^4.2.1",
    "@vitest/coverage-v8": "^1.6.1",
    "autoprefixer": "^10.4.18",
    "eslint": "^8.57.0",
    "eslint-plugin-react-hooks": "^4.6.0",
    "eslint-plugin-react-refresh": "^0.4.6",
    "jsdom": "^26.1.0",
    "postcss": "^8.4.35",
    "prisma": "^5.22.0",
    "tailwindcss": "^3.4.1",
    "@types/cors": "^2.8.17",
    "@types/express": "^4.17.21",
    "@types/supertest": "^6.0.2",
    "supertest": "^7.0.0",
    "typescript": "^5.2.2",
    "vite": "^5.2.0",
    "vitest": "^1.4.0"
  }
}
